<%- include('../../partials/header.ejs')  %> 
<body>
    <%- include('../../partials/navbar.ejs')  %> 
    <div class="container">
        <div class="card-header">
            <h2 class="text-center">Artigos</h2>
            <a href="/admin/articles/new">
                <button class="btn btn-success">Criar novo artigo</button>
            </a>
        </div>
        <table class="table">
            <thead class="bg-dark text-light">
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th id="acao">Ação</th>
            </thead>
            <tbody>                
                <% articles.forEach(article => { %>
                    <tr>
                        <td><%= article.id %></td>
                        <td><%= article.title %></td>
                        <td><%= article.slug %></td>
                        <td><%= article.category.title %></td>
                        <td>
                            <a href="articles/edit/<%= article.id %>">
                                <button class="btn btn-warning">Editar</button>
                            </a>
                            <form action="/articles/delete" method="POST" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                                <input type="hidden" name="id" value="<%= article.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    </div>
</body>
<%- include('../../partials/footer.ejs')  %> 
