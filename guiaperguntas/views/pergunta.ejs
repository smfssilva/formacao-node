<%- include('partials/header.ejs')  %> 
<body>
    <%- include('partials/navbar.ejs')  %> 
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        
        <form action="/responder" method="POST">
            <h3>Respostas</h3>
            <label for="">Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <br>
            <input type="text" name="id_pergunta" value="<%= pergunta.id %>" hidden></input>
            <button type="submit" class="btn btn-warning">Responder</button>
        </form>
        <hr>
            <% respostas.forEach(resposta => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <%= resposta.corpo %> 
                    </div>
                </div>
            <% }) %>
        <hr>
    </div>
</body>
<%- include('partials/footer.ejs')  %> 